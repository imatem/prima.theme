      css:theme="#currentWorkflowState"
      /> -->
    <!-- drop Plone dropdown arrow -->
    <!-- <drop
      css:content="#plone-contentmenu-workflow .arrowDownAlternative"
      /> -->

    <before css:theme-children="#edit-bar" css:content="#edit-bar" />

    <!-- CONTENT -->
    <replace
      css:content="#content"
      css:theme-children="#content"
      />

    <!-- Portlets -->
    <!-- <replace
